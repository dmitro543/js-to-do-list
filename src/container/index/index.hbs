<div class="page">
    <h1 class="title page-title">
        To-do list
    </h1>

    <div class="block form">
        <input type="text" class="block-input form__input" placeholder="Введіть задачу...">
        <button class="block-button form__button">Додати</button>
    </div>

    <main class="task__list"></main>
</div>

<template id="task">
    <div class="task list">
        <span class="task__number list-id">1.</span>
        <span class="task__text list-description">Some placeholder content in a paragraph below the heading and date.</span>
        <button class="list-add task__button task__button--do">
               <img src="/svg/list-add.svg" class="list-add-img">
        </button>
        <button class="list-delete task__button task__button--cancel">
            <img src="/svg/list-delete.svg" class="list-add">
        </button>
    </div>
</template>


